#!/bin/bash

history_eww_content() {
  notifications=$(dunstctl count history)
  if [ "$notifications" -eq "0" ]; then
   box=$(echo "(box 
    :orientation \"v\"
    :spacing 10 
    :space-evenly \"false\" 
    :class \"notification-container\"
    :vexpand \"true\"
    (label 
      :vexpand \"true\"
      :text \"There are no notifications\"))") 
   echo $box
   return
  fi

  notifications=$(dunstctl history | jq -r '.data[0][] |
    " 
      (box 
        :orientation \"v\" 
        :class \"notification-box\" 
        :space-evenly \"false\" 
        :tooltip \"\(.body.data)\"
        (box
          :orientation \"h\"
          :space-evenly \"false\"
          (label 
            :class \"appname\" 
            :hexpand \"true\" 
            :halign \"start\" 
            :truncate \"true\" 
            :show-truncated \"true\" 
            :text \"\(.appname.data)\")
          (button 
            :onclick \"dunstctl history-rm \(.id.data) ; scripts/notifications update\"
            :class \"delete-button\"
            (label :text \"ó°…™ \")))
        (label 
          :class \"summary\" 
          :halign \"start\" 
          :truncate \"true\" 
          :show-truncated \"true\" 
          :text \"\(.summary.data)\") 
        (label 
          :class \"body\" 
          :halign \"start\" 
          :truncate \"true\" 
          :show-truncated \"true\" 
          :text \"\(.body.data)\"))"')

  box=$(echo "(box 
    :orientation \"v\"
    :spacing 10 
    :space-evenly \"false\" 
    :class \"notification-container\"
      (button 
      :onclick \"dunstctl history-clear ; scripts/notifications update\" 
      :vexpand \"false\" 
      :class \"delete-notifications\" 
        (box
          (label 
            :wrap \"true\"
            :text \"Delete all\"))) 
        $notifications)" | tr '\n' ' ') 

  echo $box
}

history_eww_content
dbus-monitor "interface='org.freedesktop.Notifications'" | while read -r _; do
  if (dunstctl is-paused | grep false) &> /dev/null; then
    history_eww_content
  else
    dunstctl close-all ; history_eww_content
  fi

done
